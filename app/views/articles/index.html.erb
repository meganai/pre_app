<h1>掲示板</h1>

<h3>スレッド一覧</h3>
<table class="table table-bordered">
    <% @articles.each do |article| %>
      <tr>
        <td>No.<%= article.id %></td>
        <td><%= link_to article.title, article %></td>
        <td><%= article.created_at %></td>
        <td><%= article.user.l_name %></td>
        <td><%= article.qualification.name %></td>
        <td><%= article.responses.count %></td>
        <td><%= link_to 'show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article), :class => 'icon-pencil' %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'icon-remove' %></td>
      </tr>
    <% end %>
</table>

