<p id="notice"><%= notice %></p>

<h2><%= @article.title %></h2>
<p>
  <b>名前:</b>
  <%= @article.user.l_name %>
</p>

<p>
  <b>資格:</b>
  <%= @article.qualification_id %>
</p>

<p>
  <%= @article.content %>
</p>

<% @article.responses.each do |response| %>
  
<div class="wrapper">
  <div class="box">
  <h3><%= response.title %></h3>
  <%= response.user.l_name %>
  <%= response.user.f_name %>
  <%= response.content %>
  </div>
</div>
<% end %>

<%= render 'response' %>



<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<style type="text/css">
    * {
        box-sizing: border-box;
    }

    .wrapper {
        position: relative;
        margin-right: 50px;
    } 

    .box {
        position: relative;
        background: #fff;
        min-height: 120px;
        width: 100%;
        margin-bottom: 20px;
        border: 1px solid #999;
    }

    .box:after {
        content: '';
        position: absolute;
        border-top: 10px solid #fff;
        border-right: 5px solid transparent;
        border-left: 5px solid transparent;
        bottom: -9px;
        left: 5px;
    }

    .box:before {
        content: '';
        position: absolute;
        border-top: 10px solid #999;
        border-right: 5px solid transparent;
        border-left: 5px solid transparent;
        bottom: -11px;
        left: 5px;
    }

</style>